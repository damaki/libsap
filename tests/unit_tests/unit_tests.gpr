with "config/unit_tests_config.gpr";
project Unit_Tests is

   type Report_Format_Kind is ("Text", "XML");
   Report_Format : Report_Format_Kind := external ("UNIT_TEST_REPORT_FORMAT", "Text");

   for Source_Dirs use ("src/", "config/", "src/" & Report_Format);
   for Object_Dir use "obj/" & Unit_Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("unit_tests.adb");

   package Compiler is
      for Default_Switches ("Ada") use Unit_Tests_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Unit_Tests;
